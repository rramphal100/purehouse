<div class="row" id="whole">
  <div class="col s6 m6"id="anna" >

    <!-- <div class="card" id="an" style="background-color: #FFFFFF"> -->
      <div class="card-content white-text">
        <span class="card-title" style="color: black"><h3><strong>{{role.name}}</strong></h3></span>
        <span class="card-title" style="color: #ef5350"><h5><strong>{{productname}}</strong></h5></span>
        <hr>
        <h5 style="color: black">{{role.description}}</h5>
        <br>
        {{#if role.responsibilities}}
          <h5 style="color: #ef5350">Responsibilities</h5>
          <ul class="roleRequirements" style="color: #818181">
            {{#each role.responsibilities}}
              <li>{{text}}</li>
            {{/each}}
          </ul>
        {{/if}}
        <br>
      </div>

      <div class="card-action">
        <a class="waves-effect waves-light btn modal-trigger" href="#modal1">I'm Interested!</a>
      </div>
    <!-- </div> -->
    <b></b>

  </div>



    <div id="bluebox" class="col s6 m6 z-depth-2">
      <img src="/static/img/tablet-and-laptop.png" alt="mediaImg" class="roleIcon">
    </div>
</div>


<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <h4>Request Confirmation</h4>
    <h6>Do you want to apply for the <span style="color: #ef5350">{{role.name}}</span> role for the <span style="color: #ef5350">{{productname}}</span> project?</h6>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-light btn" style="background-color: #ef5350">Yes</a>
    <a href="#!" class=" modal-action modal-close waves-effect waves-light btn-flat">No</a>
  </div>
</div>
